      Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int b = sc.nextInt();
        int c1 = sc.nextInt();
        int c= sc.nextInt();
        int d = sc.nextInt();
        double area = 0.5 * a * b;
        int perimeter = c1 + c + d;
        System.out.printf("Area of Triangle is %.2f\n", area);
        System.out.printf("Perimeter of Triangle is %.2f\n", (double)Â perimeter);
    }
}
